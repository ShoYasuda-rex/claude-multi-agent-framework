{
  "language": "日本語",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "enabledPlugins": {
    "playwright@claude-plugins-official": true
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "curl -s -H \"Priority: 2\" -H \"Title: Claude Code\" -H \"Tags: question\" -d \"確認が必要です\" ntfy.sh/completion-9f3k2x",
            "timeout": 10,
            "notificationLevel": 1
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(curl *ntfy.sh*)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(rm *)",
      "Bash(sudo *)",
      "Bash(dd *)",
      "Bash(chmod 000 *)",
      "Bash(format *)",
      "Bash(del /f *)",
      "Bash(rmdir /s *)",
      "Read(.env*)",
      "Read(**/secrets/**)",
      "Read(**/*credential*)",
      "Edit(.env*)",
      "Edit(**/secrets/**)",
      "Edit(**/*credential*)"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(git reset --hard *)",
      "Bash(git checkout .)",
      "Bash(docker *)",
      "Bash(docker-compose *)"
    ]
  }
}
